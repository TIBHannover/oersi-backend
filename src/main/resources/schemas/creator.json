{
  "$id": "creator.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Creator",
  "description": "The creator(s) of the learning resource",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "type": {
        "title": "Type",
        "type": "string",
        "enum": [
          "Person",
          "Organization"
        ]
      },
      "id": {
        "title": "URL",
        "type": "string",
        "format": "uri"
      },
      "name": {
        "title": "Name",
        "type": "string"
      },
      "honorificPrefix": {
        "title": "Academic title",
        "type": "string"
      },
      "affiliation": {
        "$ref": "affiliation.json"
      }
    },
    "required": [
      "name",
      "type"
    ]
  }
}