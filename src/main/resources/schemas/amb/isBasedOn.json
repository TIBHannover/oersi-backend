{
  "$id": "isBasedOn.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Based on",
  "description": "Resources the described learning resources derived from.",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "type": {
        "title": "Type",
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "id": {
        "title": "URL",
        "type": "string",
        "format": "uri"
      },
      "name": {
        "title": "Name",
        "type": "string"
      },
      "creator": {
        "$ref": "creator.json"
      },
      "license": {
        "$ref": "license.json"
      },
      "provider": {
        "$ref": "provider.json"
      }
    },
    "required": [
      "name"
    ]
  }
}