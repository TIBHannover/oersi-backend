{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema.json",
  "title": "OER",
  "description": "This is a generic JSON schema for describing an Open Educational Resource with schema.org. This is a stricter but compatible version of the LRMI schema (https://dini-ag-kim.github.io/lrmi-profile/draft/schemas/schema.json)",
  "type": "object",
  "properties": {
    "@context": {
      "$ref": "context-schema.json"
    },
    "id": {
      "$ref": "id.json"
    },
    "type": {
      "$ref": "type.json"
    },
    "name": {
      "$ref": "name.json"
    },
    "creator": {
      "$ref": "creator.json"
    },
    "contributor": {
      "$ref": "contributor.json"
    },
    "description": {
      "$ref": "description.json"
    },
    "about": {
      "$ref": "about.json"
    },
    "license": {
      "$ref": "license.json"
    },
    "image": {
      "$ref": "image.json"
    },
    "dateCreated": {
      "$ref": "dateCreated.json"
    },
    "datePublished": {
      "$ref": "datePublished.json"
    },
    "inLanguage": {
      "$ref": "inLanguage.json"
    },
    "publisher": {
      "$ref": "publisher.json"
    },
    "sourceOrganization": {
      "$ref": "sourceOrganization.json"
    },
    "learningResourceType": {
      "$ref": "learningResourceType.json"
    },
    "audience": {
      "$ref": "audience.json"
    },
    "isBasedOn": {
      "$ref": "isBasedOn.json"
    },
    "isPartOf": {
      "$ref": "isPartOf.json"
    },
    "hasPart": {
      "$ref": "hasPart.json"
    },
    "mainEntityOfPage": {
      "$ref": "mainEntityOfPage.json"
    },
    "keywords": {
      "$ref": "keywords.json"
    },
    "encoding": {
      "$ref": "encoding.json"
    },
    "conditionsOfAccess": {
      "$ref": "conditionsOfAccess.json"
    },
    "isAccessibleForFree": {
      "$ref": "isAccessibleForFree.json"
    },
    "caption": {
      "$ref": "caption.json"
    },
    "duration": {
      "$ref": "duration.json"
    }
  },
  "required": [
    "@context",
    "id",
    "name",
    "type",
    "mainEntityOfPage"
  ]
}
